<div class="ProductTabs">
        {% for block in section.blocks %}
          {% if block.type == 'tab' %}
          {% if block.settings.title != blank and block.settings.content != blank %}
          <div class="TabListContainer">
          <div class="TabHeader">
          {{ block.settings.title }} <span class="Icon-plus"></span>
          </div>
          <div class="TabContent">
          {{ block.settings.content }}
          </div>
          </div>
          {% endif %}
          {% endif %}
          {% endfor %}
        <div class="TabListContainer">
          <div class="TabHeader">
          Description <span class="Icon-plus"></span>
          </div>
          <div class="TabContent">
          {{ product.description }}
          </div>
          </div>
          
      </div>