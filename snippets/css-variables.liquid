<style>
{{ settings.font_body | font_face: font_display: 'swap' }}
{{ settings.main-font-heading| font_face: font_display: 'swap' }}
{{ settings.font-heading | font_face: font_display: 'swap' }}
{{ settings.button-font | font_face: font_display: 'swap' }}


{%- assign font_body_bold = settings.font_body | font_modify: 'weight', 'bolder' -%}
{%- assign font_body_bold_italic = font_body_bold | font_modify: 'style', 'italic' -%}

{{ font_body_bold | font_face: font_display: 'swap' }}
{{ font_body_bold_italic | font_face: font_display: 'swap' }}
{% for scheme in settings.color_schemes -%}

.color-{{ scheme.id }} {
  color: {{ scheme.settings.text }};
  {% if scheme.settings.background_gradient != empty %}
    background: {{ scheme.settings.background_gradient }};
  {% else %}
    background: {{ scheme.settings.background }};
  {% endif %}
}
 .color-{{ scheme.id }} .Logo_svg path{
   fill: {{ scheme.settings.text }};
 }
.color-{{ scheme.id }} .cart-button span{
 color: {{ scheme.settings.button-text }};
 background: {{ scheme.settings.button-background }};
}
.color-{{ scheme.id }} .header-content.menu-active .header{
  border-bottom: 1px solid {{ scheme.settings.color-border }};
}
.color-{{ scheme.id }} #nav-quick-search-container {
  {% if scheme.settings.background_gradient != empty %}
    background: {{ scheme.settings.background_gradient }};
  {% else %}
    background: {{ scheme.settings.background }};
  {% endif %}
  border: 1px solid {{ scheme.settings.color-border }};
 }
.color-{{ scheme.id }} .Tabbing-Title{
  border-color: {{ scheme.settings.border-color }};
}
.color-{{ scheme.id }}.boxSearch{
  border: 1px solid {{ scheme.settings.color-border }};
}
.color-{{ scheme.id }} .border-all,.color-{{ scheme.id }}.border-all{
  border: 1px solid {{ scheme.settings.color-border }};
} .color-{{ scheme.id }} .border-bottom{
  border-bottom: 1px solid {{ scheme.settings.color-border }};
} .color-{{ scheme.id }} .border-top{
  border-top: 1px solid {{ scheme.settings.color-border }};
}
.color-{{ scheme.id }} .border-left{
  border-left: 1px solid {{ scheme.settings.color-border }};
}.color-{{ scheme.id }} .border-right{
  border-right: 1px solid {{ scheme.settings.color-border }};
}
.color-{{ scheme.id }} .hederIcon:hover{
  color: {{ scheme.settings.secondary-button-hover-text }};
  background: {{ scheme.settings.secondary-button-hover-background }};
}
.color-{{ scheme.id }} .snakify-in:after {
background:  {{ scheme.settings.link-color }};
}
.color-{{ scheme.id }} .info ul ul{
  {% if scheme.settings.background_gradient != empty %}
    background: {{ scheme.settings.background_gradient }};
  {% else %}
    background: {{ scheme.settings.background }};
  {% endif %}
    border: 1px solid {{ scheme.settings.color-border }};
}
.color-{{ scheme.id }} .hederIcon:hover svg{
  fill: {{ scheme.settings.secondary-button-hover-text }};
}
.color-{{ scheme.id }} h1, .color-{{ scheme.id }} .heading{
   color: {{ scheme.settings.heading-color }};
}
.color-{{ scheme.id }} .sub-heading{
 color: {{ scheme.settings.sub-heading-color }};
}
.color-{{ scheme.id }} a{
 color: {{ scheme.settings.link-color }};
}
.color-{{ scheme.id }} svg {
   fill: {{ scheme.settings.link-color }};
 }
.color-{{ scheme.id }} .primary-button {
  color: {{ scheme.settings.button-text }};
  background: {{ scheme.settings.button-background }};
  border: 1px solid {{ scheme.settings.button-border-color}};
}
.color-{{ scheme.id }} .secondary-button, .color-{{ scheme.id }} .tablinks.active{
  color: {{ scheme.settings.secondary-button-text }};
  background: {{ scheme.settings.secondary-button-background }};
  border: 1px solid {{ scheme.settings.secondary-button-border-color}};
}
.color-{{ scheme.id }} .primary-button:hover {
  color: {{ scheme.settings.button-hover-text }};
  background: {{ scheme.settings.button-hover-background }};
  border: 1px solid {{ scheme.settings.button-hover-border-color}};
}
.color-{{ scheme.id }} .secondary-button:hover{
  color: {{ scheme.settings.secondary-button-hover-text }};
  background: {{ scheme.settings.secondary-button-hover-background }};
  border: 1px solid {{ scheme.settings.secondary-button-hover-border-color}};
}
{% endfor %}
:root {
    --body-background-color:{{ settings.bg-color}};
    --body-background-light-color:{{ settings.body-bg-light-color}};
    --body-text-color:{{ settings.body-text-color}};
    --body-link-color: {{ settings.body-link-color }};
    --body-font-size:{{ settings.body-font-size}}px;  
    --button-background-color:{{ settings.button-bg-color}};
    --button-text-color:{{ settings.button-text-color}};
    --button-border-color:{{ settings.button-border-color}};
    --button-hover-background-color:{{ settings.color-on-hover}};    
    --button-hover-text-color:{{ settings.text-color-on-hover}};
    --button-hover-border-color:{{ settings.button-hover-border-color}};

    --button-border-thickness:{{ settings.button-border-thickness}}px;
    --button-border-radius:{{ settings.button-radius}}px;
    --button-top-padding:{{ settings.button-top-padding}}px;
    --button-left-padding:{{ settings.button-left-padding}}px;
    --button-right-padding:{{ settings.button-right-padding}}px;
    --button-bottom-padding:{{ settings.button-bottom-padding}}px;

    --main-heading-color:{{ settings.main-heading-color}};
    --heading-color:{{ settings.heading-color}};

    --input-text-color:{{ settings.input-text-color}};
    --input-background-color:{{ settings.input-bg-color}};
    --input-border-color:{{ settings.input-border-color}};
    --input-border-thickness:{{ settings.input-border-thickness}}px;
    --input-border-radius:{{ settings.input-border-radius}}px;  

    --body-layout:{{ settings.page-width}}px;
    --website-narrow-width:{{ settings.narrow-width}}px;
    --website-wrapper-width:{{ settings.wrapper-width}}px;
    --wbsite-left-padding:{{ settings.layout-padding-left}}px;
    --wbsite-right-padding:{{ settings.layout-padding-right}}px;

    --main-fontheading-size:{{settings.mainheading-font-size}}px;
    --font-heading-size:{{settings.font-heading-size}}px;
    --button-font-size:{{settings.button-font-size}}px;
    --flash-wrapper-image:{{settings.flash-image}};
    --site-link-color:{{settings.link-color}};
         

--font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
--font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
--font-body-weight: {{ settings.font_body.weight }};
--font-body-style: {{ settings.font_body.style }};
--font-body-bold-weight: {{ font_body_bold.weight | default: 'bold' }};
}
</style>
