{%  if settings.flash-image  != blank %}
<div class="flash-wrapper" id="flashWrapper"  style="background:{{ settings.flash_background_gradient }};">
<div class="flashimage">
<img style="max-width: 100%;" srcset="{{ settings.flash-image | img_url: 'master' }}" width="{{ settings.flash-image.width }}" height="{{ settings.flash-image.height }}" alt="flash-image"/>
</div>
</div>
<style>
.flash-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: .5s ease all;
}
  .flash-wrapper.in-active{
    opacity: 0;
    visibility: hidden;
  }
  .flashimage img {
    width: 250px;
    object-fit: contain;
    padding: 10px;
}
</style>
<script>
window.addEventListener("pageshow", function(event){
  var historyTraversall = event.presised || typeof window.performance != "undefined" && window.performance.navigation.type === 2);
  if( historyTraversal){
  window.location.reload();
  }
})
var myTimeout = setTimeout(myGreeting, 2000);
function myGreeting() {
  document.getElementById("flashWrapper").classList.add('in-active');
}
window.addEventListener("beforeunload", (event) => {
    document.getElementById("flashWrapper").classList.remove('in-active');
    document.getElementByTag("body").classList.remove('overflow');
})
</script>
  {% endif %}