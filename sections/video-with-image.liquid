        {% endif %}
        <div class="button-box btn_color{{ block.id }}">
      {%  style %}
         .btn_color{{ block.id }} .cta-btn{
           color: {{ block.settings.btn_color }};
           background: {{ block.settings.btn_bg }};
         }
         .btn_color{{ block.id }} .cta-btn.secondary-btn{
