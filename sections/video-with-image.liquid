<link rel="stylesheet" href="{{ 'video-image-block.css' | asset_url}}" />
{%  style %}
.section-{{ section.id }}-padding{
padding-top:{{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
padding-bottom:{{ section.settings.padding_bottom | times: 0.75 |round: 0 }}px;
}
  @media screen and (min-width: 750px) {
.section-{{ section.id }}-padding {
padding-top: {{ section.settings.padding_top }}px;
padding-bottom: {{ section.settings.padding_bottom }}px;
}
}
{% endstyle %}
<div class="section-{{ section.id}}-padding">
<div class="{% if section.settings.width =='full-width' %}full-width{% elsif section.settings.width =='wrapper-width'%}page-width {% else %}narrow-width{% endif%}">
<div class="videoImage-container ItemSize-{{ section.blocks.size }}">
{% for block in section.blocks %}
  {% if section.blocks.size == 3 and forloop.index == 2 %}
<div class="RigthBlock">
    {% endif %}
  <div class="BoxItems {% if section.blocks.size == 3 and forloop.index == 1 %}LeftBlock{% endif %}">
{% if block.type == 'video' %}
 
  <div class="video-with-text hover-zoom">
  {% if block.settings.video_link != blank and block.settings.video_link contains '.mp4' %}
    <div class="video-box overflow-hidden radius-30">
      {% if block.settings.mobile_video_link != blank %}
        <video loading="lazy" class="video-js desktop-hide" loop autoplay preload="none" muted playsinline >
            <source src="{{ block.settings.mobile_video_link }}" type="video/mp4">
        </video>
        {% endif %}
        <video loading="lazy" class=" video-js {% if block.settings.mobile_video_link !=blank %}mobile-hide{% endif %}" loop autoplay preload="none" muted playsinline >
            <source src="{{ block.settings.video_link }}" type="video/mp4">
        </video>
    </div>
    {% endif %}
   
    <div class="text-box banner-content-{{ block.settings.desktop_content_position}}" style="color:{{ block.settings.text-color}}">
        <div class="overlay-opacity" style="{{ block.settings.overlay_opacity_color  }}; opacity: {{ block.settings.overlay_opacity }}"></div>
        {% if block.settings.title !=blank %}
        <h1>{{ block.settings.title }}</h1>
        {% endif %}
        {% if block.settings.sub-title !=blank %}
        <h2>{{ block.settings.sub-title }}</h2>
        {% endif %}
        {% if block.settings.text !=blank %}
        <div class="rte">{{ block.settings.text }}</div>
        {% endif %}
        <div class="button-box btn_color{{ block.id }}">
      {%  style %}
         .btn_color{{ block.id }} .cta-btn{
           color: {{ block.settings.btn_color }};
           background: {{ block.settings.btn_bg }};
         }
         .btn_color{{ block.id }} .cta-btn.secondary-btn{
           color: {{ block.settings.sec_btn_color }};
           background: {{ block.settings.sec_btn_bg }};
         }
         .btn_color{{ block.id }} .cta-btn:hover{
           color: {{ block.settings.btn_hover_color }};
           background: {{ block.settings.btn_hover_bg }};
         }
         .btn_color{{ block.id }} .cta-btn.secondary-btn:hover{
           color: {{ block.settings.sec_btn_hover_color }};
           background: {{ block.settings.sec_hover_btn_bg }};
         }
        {% endstyle %}
        {% if block.settings.button_label !=blank or block.settings.button_link !=blank %}
        <a href="{{ block.settings.button_link }}" class="cta-btn">{{ block.settings.button_label }}</a>
        {% endif %}
        
        {% if block.settings.second_button_label !=blank or block.settings.second_button_link !=blank %}
        <a href="{{ block.settings.second_button_link }}" class="cta-btn secondary-btn">{{ block.settings.second_button_label }}</a>
        {% endif %}
        </div>
           
        </div>
    </div>
   
    {% endif %}
	
	
    {% if block.type == 'image' %}
    
  <div class="image-with-text hover-zoom"> 
  {% if block.settings.image_bg != blank %}
    <div class="image-box overflow-hidden radius-30">
      {% if  block.settings.mobile_image_bg != blank %}
         <img class="desktop-hide" loading="lazy" src="{{ block.settings.mobile_image_bg  | img_url:'768x'}}">
        {% else %}
        <img loading="lazy" class="{% if block.settings.mobile_image_bg != blank %}mobile-hide{% endif %}"  src="{{ block.settings.image_bg  | img_url:'1400x'}}">
        {% endif %}
    </div>
    {% endif %}
    <div class="text-box banner-content-{{ block.settings.desktop_content_position}}" style="color:{{ block.settings.text-color}}">
        <div class="overlay-opacity" style="{{ block.settings.overlay_opacity_color  }}; opacity: {{ block.settings.overlay_opacity }}"></div>
