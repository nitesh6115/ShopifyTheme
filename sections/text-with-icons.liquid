{{ 'text-with-icons.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding .grid__item {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-padding .rte p{
    color: {{ section.settings.richColor }};
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding .grid__item {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="IconText-wrap section-{{ section.id }}-padding" style="background:{{section.settings.bg-color}};">
<div class="{% if section.settings.width =='full-width'%}full-width{% else %}page-width{% endif %}">
  {% capture image_layout %}
    <div class="icon-with-text-icon grid__item" style="background: {{ section.settings.IconBox }};">
    {% for block in section.blocks %}
      <div class="icons">
      {% if block.settings.image != blank %}
          {%- capture sizes -%}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2){%- endcapture -%}
          {{ block.settings.image | image_url: width: 1500 | image_tag:
            loading: 'lazy',
            sizes: sizes,
            widths: '165, 360, 535, 750, 1070, 1500'
          }}
         {% endif %}
      </div>
      {% endfor %}
    </div>
  {% endcapture %}
 <div class="IconWithText grid product-grid grid--1-col-tablet-down
              grid--2-col-desktop">
  {% if section.settings.layout == 'left' %}
    {{ image_layout }}
  {% endif %}


    <div class="icon-with-text grid__item" style="background: {{ section.settings.TextBox }};">
      <div class="TextContent">
      {% if section.settings.title != blank %}
      <h1 class="SectionTitle" style="{{ section.settings.titleColor }};">{{ section.settings.title }}</h1>
    {% endif %}
    {% if section.settings.sub-title != blank %}
      <h3 style="{{ section.settings.subColor }};">{{ section.settings.sub-title }}</h3>
    {% endif %}
    
    {% if section.settings.dec != blank %}
      <div class="rte">{{ section.settings.dec }}</div>
    {% endif %}
    <div class="icon-button">
    {% if section.settings.button_text or section.settings.button_url != blank %}
      <a class="button" href ="{{section.settings.button_url}}">{{section.settings.button_text}}</a> 
      {% endif %}
    </div>
    </div>
  </div>
    {% if section.settings.layout == 'right' %}
    {{ image_layout }}
  {% endif %}
 </div>
</div>
</div>

{% schema %}
  {
    "name": "Text With Icons",
    "settings": [
       {
        "type": "select",
        "id": "width",
        "label": "Page width",
        "options": [
          {
            "value": "full-width",
            "label": "Full Width"
          },
          {
            "value": "page-width",
            "label": "Page Width"
          }
        ]
       },
       {
        "type": "color_background",
        "id": "bg-color",
        "label": "Background-color"
         },
       {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
      {
        "type":"select",
        "label":"Text layout",
        "id":"layout",
        "options":[
          {
            "value": "left",
            "label": "Left Align"
          },
          {
            "value": "right",
            "label": "Right Align"
          }
        ]
      },
      
      {
        "type": "color_background",
        "id": "TextBox",
        "label": "Text Box Color"
      },
      {
        "type": "color_background",
        "id": "IconBox",
        "label": "Icon Box Color"
      },
       {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "color",
        "id": "titleColor",
        "label": "Heading Color",
        "default": "#000"
      },
       {
        "type": "text",
        "id": "sub-title",
        "label": "Sub Heading"
      },
       {
        "type": "color",
        "id": "subColor",
        "label": "Heading Color",
        "default": "#000"
      },
      {
        "type": "richtext",
        "id": "dec",
        "label": "Description"
      },
       {
        "type": "color",
        "id": "richColor",
        "label": "Heading Color",
        "default": "#000"
      },
      {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Url"
    }
    ],
    "blocks":[
        {
         "type":"header",
         "name":"Icons",
          "settings":[
            {
          "type": "image_picker",
          "id": "image",
          "label": "Icon"
         }
          ]
    }
    ],
    
     "presets":[
      {
        "name":"Text With Icons"
      }
    ]
  }
{% endschema %}

