<style>
.section-{{ section.id }}-padding {
padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}
@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}
</style>
<div class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
 <div class="ImageWithTextBox coll-2  {% if section.settings.image_position == 'right' %}image-right{% else %}image-left{% endif %}">
   <div class="GridItem">
    {% if section.settings.image != blank %}
    {% assign product_image = section.settings.image | img_url: 'master' %}
    <img src="{{ product_image | default: 'your-placeholder-image-url.jpg' }}" alt="{{ product.title }}" />
    {% else %}
    {% endif %}
   </div>
   <div class="GridItem">
     
  <div class="text-content {{ section.settings.text_alignment }}">
    {% for block in section.blocks %}
        {% if block.type == 'heading' %}
            <h2 class="heading">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.type == 'sub-heading' %}
        <div class="sub_heading">{{ block.settings.title }}</div>
        {% endif %}
        {% if block.type == 'button' %}
        <div class="button-box">
          {% if block.settings.primary-button != blank and block.settings.primary-button-link != blank %}
          <a href="{{ block.settings.primary-button-link }}" class="button primary-button">{{ block.settings.primary-button }}</a>
            {% endif %}
          {% if block.settings.secondary-button != blank and block.settings.secondary-button-link != blank %}
          <a href="{{ block.settings.secondary-button-link }}" class="button secondary-button">{{ block.settings.secondary-button }}</a>
            {% endif %}
        </div>
        {% endif %}
        {% if block.type == 'description' %}
        <div class="rte">{{ block.settings.title }}</div>
        {% endif %}    
    {% endfor %}
  </div>
   </div>
</div>
 </div>
{% schema %}
  {
    "name": "Image with Text",
    "settings": [
        {
          "type": "select",
          "id": "image_position",
          "label": "Image Position",
          "options": [
            {"value": "left", "label": "Left"},
            {"value": "right", "label": "Right"}
          ]
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            {"value": "left", "label": "Left"},
            {"value": "center", "label": "Center"},
            {"value": "right", "label": "Right"}
          ]
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
    ],
    "blocks":[
      {
        "name": "Heading",
        "type": "heading",
        "settings":[
          {
            "type": "richtext",
            "label": "Heading",
            "id": "title",
            "default": "<p>Heading</p>"
          }
        ]
      },
      {
        "name": "Sub-Heading",
        "type": "sub-heading",
        "settings":[
          {
            "type": "text",
            "label": "Sub-Heading",
            "id": "title",
            "default": "Sub-Heading"
          }
        ]
      },
      {
        "name": "Description",
        "type": "description",
        "settings":[
          {
            "type": "richtext",
            "label": "Description",
            "id": "title",
            "default": "<p> Below is an example of a Shopify image with text section that includes condition statements for changing the image position (left or right) and text alignment (left, center, or right). It uses Liquid and HTML to handle the conditions:</p>"
          }
        ]
      },
      {
        "name": "Button",
        "type": "button",
        "settings":[
          {
            "type": "header",
            "content": "Primary Button"
          },
          {
            "type": "text",
            "label": "Button Title",
            "id": "primary-button",
            "default": "Button"
          },
          {
            "type": "url",
            "label": "Button Link",
            "id": "primary-button-link"
          },
           {
            "type": "header",
            "content": "Secondary Button"
          },
          {
            "type": "text",
            "label": "Button Title",
            "id": "secondary-button",
            "default": "Button"
          },
          {
            "type": "url",
            "label": "Button Link",
            "id": "secondary-button-link"
          }
        ]
      }
    ]
  }
{% endschema %}

