    "blocks":[
      {
        "type":"header",
        "name":"Journy Block",
        "settings":[
          {
            "type": "color_background",
            "id": "bg-color",
            "label": "Background-color"
            },
           
           {
        "type": "text",
        "id": "title",
        "default": "Title",
        "label": "Heading"
      },
      {
        "type": "color",
        "id": "titleColor",
