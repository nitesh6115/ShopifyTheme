      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }  
    ],
    "blocks":[
      {
        "type":"header",
        "name":"Images",
        "settings":[
          {
            "type": "color_background",
            "id": "bg-color",
            "label": "Background-color"
            },
           
           {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "color",
        "id": "titleColor",
        "label": "Title Color",
        "default": "#000"
      },    
       {
        "type": "text",
        "id": "sub-title",
        "label": "Sub Heading"
      },
      {
        "type": "color",
        "id": "subColor",
        "label": "Sub-Title Color",
        "default": "#000"
      },     
      {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
      },
       {
          "type": "richtext",
         "id": "more_info",
         "label": "More Information"
       },
       {
          "type": "text",
         "id": "read_info",
         "label": "Button Text",
         "default": "Read More"
       }      
      ]
      }
    ],
     "presets":[
      {
        "name":"Journery"
      }
    ]
  }
